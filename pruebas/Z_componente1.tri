let
  var i: Integer;
  var j: Integer;
  var a: Integer;
  var x: Integer;
  var mes: Integer
in
  begin
    mes := 1;  ! Inicializamos la variable mes
    for i := 1 to 5 do
      a := a + i;
    repeat
      x := x + 1
    until x > 10;
    do
      x := x - 1
    while x > 0;
    case mes of
      1 : a := 31;
      2 : a := 28;
      3 : a := 30
    end;
    x := case mes of
      1 : 31;
      2 : 28;
      3 : 30
    end
  end
